# RSS Article Analyzer Configuration
# Copy this file to .env and fill in your actual values

# API Provider Configuration
# Options: anthropic, mistral, openai
API_PROVIDER=anthropic

# API Keys (only one is required based on your provider)
# Get your keys from:
# - Anthropic: https://console.anthropic.com/
# - Mistral: https://console.mistral.ai/
# - OpenAI: https://platform.openai.com/api-keys

ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# MISTRAL_API_KEY=your-mistral-key-here
# OPENAI_API_KEY=sk-your-openai-key-here

# Model Configuration (optional - defaults will be used if not specified)
# CLAUDE_MODEL=claude-3-5-sonnet-20241022
# MISTRAL_MODEL=mistral-large-latest
# OPENAI_MODEL=gpt-4

# RSS Feed Configuration
RSS_FEED_URL=https://bg.raindrop.io/rss/public/57118738
USER_AGENT=RSS-Article-Analyzer/1.0

# Database Configuration
DB_PATH=data/articles.db

# Processing Configuration
MAX_ARTICLES_PER_RUN=10
SCRAPER_DELAY=1.0
REQUEST_TIMEOUT=30
FOLLOW_LINKS=true
MAX_LINKED_ARTICLES=3

# Output Configuration
OUTPUT_DIR=output
REPORT_FILENAME=article_analysis_report.md

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=logs/analyzer.log

# Processing Options
FORCE_REFRESH=false
SKIP_SCRAPING=false
SKIP_ANALYSIS=false

# Advanced Configuration (Optional)
# CLAUDE_MAX_RETRIES=3
# CLAUDE_BASE_DELAY=1.0
# SCRAPER_MAX_RETRIES=3
# DATABASE_BACKUP_ENABLED=true
# CLEANUP_LOGS_DAYS=30